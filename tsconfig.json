{
  "compilerOptions": {
    // 최소한의 옵션이자 중요한 옵션
    "target": "es6", // ES6 버전으로 컴파일

    "outDir": "./dist", // 컴파일된 파일들이 저장될 디렉토리

    "module": "commonjs", // 모듈 시스템을 CommonJS로 설정
    "moduleResolution": "node", // 모듈 해석 방식을 Node.js 방식으로 설정
    "esModuleInterop": true, // ES 모듈과 CommonJS 모듈 간의 호환성을 활성화

    "lib": ["dom", "dom.iterable", "esnext"], // 사용할 라이브러리 목록 설정
    "strict": true, // 엄격한 타입 검사를 활성화

    // 기타 옵션
    "allowJs": true, // JavaScript 파일도 컴파일 대상에 포함
    "skipLibCheck": true, // 라이브러리 파일의 타입 검사 건너뛰기
    "allowSyntheticDefaultImports": true, // 기본 import를 허용
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성 강제
    "noFallthroughCasesInSwitch": true, // switch문에서 누락된 case 방지
    "resolveJsonModule": true, // JSON 모듈 해석을 활성화
    "isolatedModules": true, // 개별 모듈로 컴파일
    "noEmit": true, // 출력을 생성하지 않음
    "jsx": "react-jsx" // JSX 구문을 React로 변환
  },
  "include": ["src"], // 포함할 파일 디렉토리 설정
  "extends": "./tsconfig.paths.json" // 설정 파일 확장
}
