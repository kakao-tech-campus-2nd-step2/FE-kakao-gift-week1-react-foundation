{
  "compilerOptions": {
    // 필수 및 중요한 옵션들
    "target": "es6", // ES6 버전으로 컴파일합니다.

    "baseUrl": "./src", // 기본 URL을 ./src로 설정합니다.
    "outDir": "./dist", // 컴파일된 파일들이 저장될 디렉토리를 지정합니다.

    "module": "esnext", // 모듈 시스템을 ESNext로 설정합니다.
    "moduleResolution": "node", // 모듈 해석 방식을 Node.js 방식으로 설정합니다.
    "esModuleInterop": true, // ES 모듈과 CommonJS 모듈 간의 호환성을 활성화합니다.

    "lib": ["dom", "dom.iterable", "esnext"], // 사용할 라이브러리 목록을 설정합니다.
    "strict": true, // 엄격한 타입 검사를 활성화합니다.

    // 기타 옵션들
    "allowJs": true, // JavaScript 파일도 컴파일 대상에 포함합니다.
    "skipLibCheck": true, // 라이브러리 파일의 타입 검사를 건너뜁니다.
    "allowSyntheticDefaultImports": true, // 기본 import를 허용합니다.
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성을 강제합니다.
    "noFallthroughCasesInSwitch": true, // switch문에서 누락된 case를 방지합니다.
    "resolveJsonModule": true, // JSON 모듈 해석을 활성화합니다.
    "isolatedModules": true, // 개별 모듈로 컴파일합니다.
    "noEmit": true, // 출력을 생성하지 않습니다.
    "jsx": "react-jsx" // JSX 구문을 React로 변환합니다.
  },
  "include": ["src"], // 포함할 파일 디렉토리를 설정합니다.
  "extends": "./tsconfig.paths.json" // 설정 파일을 확장합니다.
}
